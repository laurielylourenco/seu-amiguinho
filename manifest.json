{
    "manifest_version": 3,
    "name": "SeuAmiguinho",
    "version": "1.0",
    "description": "Substitui fotos nas p√°ginas web por uma do dollynho.",
    "permissions": [
      "activeTab"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_icon": {
        "16": "./img/icon.png",
        "48": "./img/icon.png",
        "128":"./img/icon.png"
      }
    }
  }
  